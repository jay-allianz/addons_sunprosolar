<?xml version="1.0" ?>
<openerp>

    <data>
        
       <!-- Site Inspection email template -->
       <record id="site_inspection" model="email.template">
            <field name="name">Site Inspection Email Template</field>
            <field name="email_from">${object.user_id.email or object.company_id.email or 'noreply@localhost'}</field>
            <field name="subject">New site inspection needs to be done.</field>
            <field name="model_id" ref="sps_sale.model_sale_order"/>
            <field name="auto_delete" eval="True"/>
            <field name="report_name"> </field>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="body_html"><![CDATA[
<div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">
    <p>Hello,</p>
    <p>New site inspection needs to be done.</p>
    
    <p style="border-left: 1px solid #8e0000; margin-left: 30px;">
       &nbsp;&nbsp;<strong>Contract Information</strong><br/>
       &nbsp;&nbsp;Contract ID :<strong>${object.project_id.contract_id}</strong><br/>
       &nbsp;&nbsp;Contract Amount :<strong>${object.project_id.amount}</strong><br/>
       &nbsp;&nbsp;Deposite Amount :<strong>${object.project_id.deposit}</strong><br/><br/>
       &nbsp;&nbsp;<strong>Customer Information</strong><br/>
       &nbsp;&nbsp;Name : <strong>${object.partner_id.name}</strong><br />
       &nbsp;&nbsp;Email: <strong>${object.partner_id.email}</strong><br />
       &nbsp;&nbsp;Phone: <strong>${object.partner_id.phone}</strong><br /><br/>
    </p>  
</div>
            ]]></field>
        </record>
        
        <!-- Project Team notification email template -->
       <record id="project_team_notification" model="email.template">
            <field name="name">Project Team notification Email Template</field>
            <field name="email_from">${object.user_id.email or object.company_id.email or 'noreply@localhost'}</field>
            <field name="subject">Project Notification.</field>
            <field name="model_id" ref="sps_sale.model_sale_order"/>
            <field name="auto_delete" eval="True"/>
            <field name="report_name"> </field>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="body_html"><![CDATA[
<div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">
    <p>Hello,</p>
    <p>Project Notification.</p>
    
    <p style="border-left: 1px solid #8e0000; margin-left: 30px;">
       &nbsp;&nbsp;<strong>Contract Information</strong><br/>
       &nbsp;&nbsp;Contract ID :<strong>${object.project_id.contract_id}</strong><br/>
       &nbsp;&nbsp;Contract Amount :<strong>${object.project_id.amount}</strong><br/>
       &nbsp;&nbsp;Deposite Amount :<strong>${object.project_id.deposit}</strong><br/><br/>
       &nbsp;&nbsp;<strong>Customer Information</strong><br/>
       &nbsp;&nbsp;Name : <strong>${object.partner_id.name}</strong><br />
       &nbsp;&nbsp;Email: <strong>${object.partner_id.email}</strong><br />
       &nbsp;&nbsp;Phone: <strong>${object.partner_id.phone}</strong><br /><br/>
       
    </p>  
</div>
            ]]></field>
        </record>

        
    </data>
    
</openerp>
